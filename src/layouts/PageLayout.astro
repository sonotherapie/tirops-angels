---
import {SITE} from '../config.ts'
import MainNav from '../components/mainNav.astro'
import '../styles/global.css'
const { content } = Astro.props
---
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>{content.title} | {SITE.title}</title>
	<meta name="description" content={SITE.description}>
	<link rel="icon" type="image/x-icon" href="/favicon.ico" />
</head>
<body>
	<div id="wrapper">
		<header>
			<div id="siteTitle" class="flex">
				<a href="/"><img src="../../logo.png" alt="logo" class="h-12 cover"></a>
				<h1 class="text-left">Tirop's Angels</h1>
			</div>
			<div id="photo" style={content.photo}>
				<MainNav content={content} />
			</div>
		</header>
		<main>
				<slot />
		</main>
		<footer class="bg-slate-100">
			<p>{SITE.footer}</p>
		</footer>
	</div>
</body>
</html>

<style>
body {
	@apply bg-slate-100
}
#wrapper {
	@apply max-w-7xl md:w-5/6 mx-auto bg-white flex flex-col min-h-screen
}
header {
	@apply h-96
}
#siteTitle h1 {
	@apply font-bold text-2xl
}
#photo {
	@apply h-full bg-cover bg-center bg-top
}
main {
	@apply p-12 flex-grow flex flex-col md:flex-row
}
footer {
	@apply p-5 bg-slate-50
}
</style>