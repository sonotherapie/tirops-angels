---
import PageLayout from '../layouts/PageLayout.astro'
import { Markdown } from 'astro/components'
const data = Astro.fetchContent('../pages/plan/*.md')
const { content } = Astro.props
---
<PageLayout content={content}>
			<section>
                <h2>{content.title}</h2>
				<Markdown>
				<slot />
				</Markdown>
			</section>
			<aside>
				<h3>The plans:</h3>
				<ul>{data.map((post) => (
					<li><a href={post.url}>{post.link}</a></li>
				))}
				</ul>
			</aside>
</PageLayout>

<style>
    section, aside {
		@apply prose
    }
	aside {
		@apply ml-4
	}
</style>